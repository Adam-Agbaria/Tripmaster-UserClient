<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    app:cardCornerRadius="15dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Airline and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewAirline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airline"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/gray"/>

        <!-- Outbound Flight Details -->
        <TextView
            android:id="@+id/textViewOutboundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outbound Flight"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textViewOutboundDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outbound Departure Time"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewOutboundArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outbound Arrival Time"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/gray"/>

        <!-- Return Flight Details -->
        <TextView
            android:id="@+id/textViewReturnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Flight"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textViewReturnDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return Departure Time"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewReturnArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return Arrival Time"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/gray"/>

        <!-- Adults and Children -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            >

            <TextView
                android:id="@+id/textViewAdults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adults: "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewChildren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children: "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Book Flight Button -->
        <Button
            android:id="@+id/buttonBookFlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Flight"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
